{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ question.content }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ question.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ question.created ? question.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>QuestionLevel</th>
                <td>{{ question.questionLevel }}</td>
            </tr>
            <tr>
                <th>SigleOrMulti</th>
                <td>{{ question.sigleOrMulti ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_index') }}">back to list</a>

    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
