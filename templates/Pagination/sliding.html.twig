{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
    <nav aria-label="Page navigation example">
        <div class="pagination">
            {% if first is defined and current != first %}
                <span class="first page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): first})) }}">Start</a>
                </span>
            {% endif %}

            {% if previous is defined %}
                <span class="previous page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">Previous</a>
                </span>
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                    <span class="page page-item">
                        <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                    </span>
                {% else %}
                    <span class="current"><a class="page-link"> {{ page }} </a></span>
                {% endif %}
            {% endfor %}

            {% if next is defined %}
                <span class="next page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): next})) }}">Next</a>
                </span>
            {% endif %}

            {% if last is defined and current != last %}
                <span class="last page-item">
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): last})) }}">Last</a>
                </span>
            {% endif %}
        </div>
    </nav>
{% endif %}
